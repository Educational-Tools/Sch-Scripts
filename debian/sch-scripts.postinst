#!/bin/bash

set -e

install() {
    # Run install.sh with sudo and pass all arguments
    sudo /usr/share/sch-scripts/install.sh "$@"
}

case "$1" in
    configure)
        install "$@"
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
      ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
